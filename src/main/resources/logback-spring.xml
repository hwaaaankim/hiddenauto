<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false">

    <!-- 개발 환경: 콘솔만 출력 -->
    <springProfile name="local,test">
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
            </encoder>
        </appender>

        <root level="DEBUG">
            <appender-ref ref="STDOUT"/>
        </root>
    </springProfile>

    <!-- 운영 환경: 콘솔 + 파일 로그 저장 -->
    <springProfile name="prod">
        <property name="LOG_PATH" value="/home/ubuntu/hiddenauto/log"/>

        <!-- 💾 전체 로그 누적용 -->
        <appender name="ALL_LOG" class="ch.qos.logback.core.FileAppender">
            <file>${LOG_PATH}/hiddenauto.log</file>
            <append>true</append> <!-- 누적 저장 -->
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- 📆 날짜별 로그 파일 (최근 30일 보관) -->
        <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/hiddenauto-%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- 콘솔 출력 -->
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- ✅ 모든 로그를 출력 -->
        <root level="DEBUG">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="ALL_LOG"/>        <!-- 누적 -->
            <appender-ref ref="ROLLING_FILE"/>   <!-- 날짜별 -->
        </root>
    </springProfile>

</configuration>
