<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOG_PATH" value="logs"/>
    <property name="APP_NAME" value="hiddenauto"/>

    <!-- ì½˜ì†” -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ì „ì²´ ë¡œê·¸ ëˆ„ì  -->
    <appender name="ALL_LOG" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_PATH}/${APP_NAME}.log</file>
        <append>true</append> <!-- âœ… ëˆ„ì  -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ë‚ ì§œë³„ ë¡¤ë§ ë¡œê·¸ -->
    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}.rolling.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}.rolling.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- ðŸ“Œ ë‚´ê°€ ìž‘ì„±í•œ ì½”ë“œë§Œ DEBUG -->
    <logger name="com.dev.HiddenBATHAuto" level="DEBUG"/>

    <!-- ðŸ“Œ Hibernate ë° Springì€ INFOë¡œ ì œí•œ -->
    <logger name="org.hibernate" level="INFO"/>
    <logger name="org.springframework" level="INFO"/>

    <!-- ê¸°íƒ€ ë£¨íŠ¸ ë¡œê±°ëŠ” INFO -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ALL_LOG"/>
        <appender-ref ref="ROLLING_FILE"/>
    </root>

</configuration>
